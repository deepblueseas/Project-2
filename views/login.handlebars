    <form id="loginForm">
      <div style="text-align: center; border: 2px solid #000; 
        border-radius: 20px; margin-top: 100px;" class="formLogin">
          <div style="padding: 20px;" class="form-group">
            <label for="InputEmail"><h3>Email address</h3></label>
            <input type="email" class="form-control" id="inputEmail" aria-describedby="emailHelp" placeholder="Enter email">
          </div>
          <div style="padding: 20px;" class="form-group">
            <label for="InputPassword"><h3>Password</h3></label>
            <input type="password" class="form-control" id="inputPassword" placeholder="Password">
          </div>
        <div style="padding: 10px;" class="submit">
          <button type="submit" class="btn btn-success mx-auto p-2">Submit</button>
        </div>
      </div>
    </form>
