<form id="registerForm" class="d-flex justify-content-center align-items-center" style="margin-top: 50px">
  <div class="card text-center" style="width: 18rem; border: 2px solid #6c757d; border-radius: 20px; margin-top: 100px;">
    <div class="card-body">
      <h4 class="card-title pt-2 mb-2">Create a new account:</h4>
      <h6 class="card-subtitle fst-italic mb-4 mt-0 text-body-secondary">Please fill out the form below</h6>
      <div style="padding: 20px;" class="form-group">
        <label for="inputUsername">
          <h3>Username</h3>
        </label>
        <input type="text" class="form-control" id="inputNewUsername" aria-describedby="usernameHelp" placeholder="Enter new username">
      </div>
      <div style="padding: 20px;" class="form-group">
        <label for="inputEmail">
          <h3>Email address</h3>
        </label>
        <input type="email" class="form-control" id="inputNewEmail" aria-describedby="emailHelp" placeholder="Enter new email">
      </div>
      <div class="justify-content-center align-items-center mt-3">
        <div class="text-center">
          <label for="inputPassword" class="form-label">
            <h3>Password</h3>
          </label>
        </div>
        <div class="col-auto">
          <input type="password" id="inputNewPassword" class="form-control" aria-describedby="passwordHelpInline" placeholder="Enter new Password">
        </div>
        <div class="col-auto mt-3">
          <span id="passwordHelpInline" class="form-text">
            Must be at least 6 characters long.
          </span>
        </div>
      </div>

      <div class="submit d-flex justify-content-center mt-4">
        <button type="submit" class="btn btn-success p-2" id="create-account-btn">Create Account</button>
      </div>
    </div>
  </div>
</form>

<script src="/js/register.js"></script>
