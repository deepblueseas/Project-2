<link href="https://cdn.jsdelivr.net/npm/quill@2.0.2/dist/quill.snow.css" rel="stylesheet" />
<div class="container mt-5">
  <div class="d-flex justify-content-center mb-4">
    <div class="card" style="width: 30rem;">
      <div class="card-body">
        <div class="card-body">
          <h5 class="card-title"><i class="fa fa-user-secret xl" aria-hidden="true"></i> {{user.username}}
          </h5>
          <p class="card-text">{{{user.user_bio}}}</p>
          <div id="bio-editor">
            <p>Hello!</p>
            <p>use this to edit <strong>dynamically</strong> <i>edit your bio!</i></p>
            <p><br></p>
          </div>
          <div class="d-flex justify-content-center">
            <button class="btn btn-primary" id="save-bio-button">Save Text</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{{!-- Quill --}}
<script src="https://cdn.jsdelivr.net/npm/quill@2.0.2/dist/quill.js"></script>

<script>
  const toolbarOptions = [
    ['bold', 'italic', 'underline', 'strike'],
    ['blockquote', 'code-block'],
    [{ 'header': 1 }, { 'header': 2 }],
    [{ 'size': ['small', false, 'large', 'huge'] }],
    [{ 'list': 'ordered' }, { 'list': 'bullet' }, { 'list': 'check' }],
    [{ 'indent': '-1' }, { 'indent': '+1' }],
    [{ 'direction': 'rtl' }],
    [{ 'color': [] }, { 'background': [] }],
    [{ 'align': [] }],
    ['clean']
  ];
  const quill = new Quill('#bio-editor', {
    theme: 'snow',
    modules: {
      toolbar: toolbarOptions
    }
  });
</script>

<script src="/js/userProfile.js"></script>